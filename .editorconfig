# EditorConfig helps maintain consistent coding styles
root = true

[*]
# Encoding
charset = utf-8

# Indentation
indent_style = space
indent_size = 2

# Line endings (matches Prettier endOfLine = lf)
end_of_line = lf

# Always add a final newline (Prettier default)
insert_final_newline = true

# Remove trailing spaces (Prettier does this too)
trim_trailing_whitespace = true

# Markdown files â€“ keep trailing spaces for line breaks
[*.md]
trim_trailing_whitespace = false

# JSON, YAML, config files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# TypeScript and JavaScript (matches Prettier settings)
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
end_of_line = lf
